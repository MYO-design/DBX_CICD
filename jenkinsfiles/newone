pipeline {
    agent any

    triggers {
        pollSCM('H/2 * * * *')
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Checking out repo...'
                checkout scm
            }
        }

        stage('Run Python Script') {
    steps {
        echo 'Running Python script...'
        bat 'python scripts\\test.py'
    }
}
    }
}


